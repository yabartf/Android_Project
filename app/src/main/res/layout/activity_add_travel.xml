<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddTravelActivity">


    <CalendarView
        android:id="@+id/calendarDate"
        android:layout_width="317dp"
        android:layout_height="288dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="62dp"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:hint="Name"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/returnAddressText"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:hint="Return address"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="384dp" />

    <EditText
        android:id="@+id/destinationAddressText"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:hint="Destination address"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="464dp" />

    <EditText
        android:id="@+id/TextPhone"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone number"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="144dp" />

    <EditText
        android:id="@+id/TextEmailAddress"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="224dp" />

    <EditText
        android:id="@+id/travelersNum"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Number of travelers"
        android:inputType="number"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="304dp" />

    <Button
        android:id="@+id/addAddressButton"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:onClick="addAddress"
        android:text="Add"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="464dp" />

    <TextView
        android:id="@+id/optionalAddress"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:visibility="invisible"
        android:text=""
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="544dp" />

    <Button
        android:id="@+id/RemoveAddress"
        android:visibility="invisible"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:text="Remove"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="544dp" />



</androidx.constraintlayout.widget.ConstraintLayout>